<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_marginLeft="@dimen/main_margin_left"
    android:layout_marginRight="@dimen/main_margin_left"
    android:layout_marginTop="30dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/scan_qr_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/scan_qr"
            android:text="@string/scan_qr_code" />

        <TextView
            android:id="@+id/scan_nfc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/scan_nfc" />

        <TextView
            android:id="@+id/scan_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/scan_input"
            android:text="@string/scan_input"
            />


</LinearLayout>